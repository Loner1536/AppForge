{
	"compilerOptions": {
		"target": "ESNext",
		"module": "CommonJS",
		"moduleResolution": "Node",
		"noLib": true,
		"strict": true,

		"jsx": "preserve",

		"rootDir": "src",
		"outDir": "out",

		"moduleDetection": "force",
		"typeRoots": ["node_modules/@rbxts"],
		"allowSyntheticDefaultImports": true,
		"resolveJsonModule": true,
		"experimentalDecorators": true,
		"downlevelIteration": true,
		"declaration": true
	}
}
